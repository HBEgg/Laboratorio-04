 @using Laboratorio_04.Models
@model IEnumerable<Trabajador>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index1</title>      
    <style type="text/css">
        body{
            font-family : Arial; 
            font-size: 15pt; 
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index" , "Home", FormMethod.Post,new { enctype = "multiplart/form-data" }))
     {
        <input type="file" name="postedFile" />
        <input type="submit" value="Importar" />
     }
    @if (Model.Count() >0)
    {
        <hr/>
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Proyecto</th>
                <th>Prioridad</th>
                <th>Entrega</th>
            </tr>
            @foreach (Trabajador trabajadador in Model)
             {
                <tr>
                    <td>@trabajadador.Titulo</td>
                    <td>@trabajadador.Describetarea</td>
                    <td>@trabajadador.Proyecto</td>
                    <td>@trabajadador.Prioridad</td>
                    <td>@trabajadador.Entrega</td>
                </tr>
             }
        </table>
    }
    </body>
</html>
